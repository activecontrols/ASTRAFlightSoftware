<mujoco>
    <!-- Define assets - use the builtin checkerboard texture for the ground plane -->
    <asset>
        <texture name="grid" type="2d" builtin="checker" rgb1=".1 .2 .3"
            rgb2=".2 .3 .4" width="300" height="300" mark="none"/>
        <material name="grid" texture="grid" texrepeat="1 1"
            texuniform="true" reflectance=".2"/>
    </asset>

    <!-- Define actual objects in the sim -->
    <worldbody>
        <!-- Define the lighting source-->
        <light name="lightMain" mode = "fixed" pos="0 0 1"/>

        <!-- Define the floor as a plane -->
        <geom name="floor" type="plane" pos="0 0 -.1" size="200 200 .1" material="grid"/>

        <!-- Define the rocket -->
        <!-- I assume you can also attach child bodies to it? not sure how that works -->
        <body name="rocket" pos="5 5 20" euler="0 90 0">
            <!-- Define a light that follows the rocket-->
            <light name="light" mode = "track" pos="0 0 1"/>
            <!-- Define a camera that follows the rocket-->
            <camera name="fixed" mode = "track" pos="0 -1.3 .5" xyaxes="1 0 0 0 1 2"/>

            <!-- Define joint as free, allowing rocket to move in 6DOF (others include ball, slide, hinge) -->
            <joint name="free" type="free"/>

            <!-- Define the actual geometry - we are just going to use a cylinder -->
            <geom name="body" type="cylinder" size=".1 .3" rgba="1 0 0 1"/>

            <!-- Define a thrust point for the actuators to attach to -->
            <site name="thrust_point" pos="0 0 -0.3" size="0.1"/>
        </body>
    </worldbody>

    <!-- Define the actuator model - we just model it as 3 motors that can apply XYZ forces at the thrust point -->
    <actuator>
        <motor name="thrust_x" site="thrust_point" gear="1 0 0 0 0 0"/>
        <motor name="thrust_y" site="thrust_point" gear="0 1 0 0 0 0"/>
        <motor name="thrust_z" site="thrust_point" gear="0 0 1 0 0 0"/>
    </actuator>
</mujoco>
